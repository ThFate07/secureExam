# Server/runtime configuration
NODE_ENV=development

# Database
DATABASE_URL=postgresql://postgres:password@localhost:5432/secureexam?schema=public

# Auth/session
AUTH_SECRET=your-secret-key-change-in-production-min-32-chars
JWT_SECRET=your-jwt-secret-change-in-production
SESSION_TIMEOUT=86400000

# Encryption
ENCRYPTION_KEY=your-encryption-key-32-chars-min

# Realtime (optional external Socket.IO service)
SOCKET_IO_URL=http://localhost:3000
SOCKET_IO_PATH=/api/socket

# Redis (optional for rate limiting, pub/sub)
REDIS_URL=redis://localhost:6379
REDIS_ENABLED=false

# Storage (S3-compatible or local)
STORAGE_PROVIDER=local
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
S3_BUCKET_NAME=secureexam-snapshots
S3_ENDPOINT=http://localhost:9000
S3_BUCKET=secureexam
S3_ACCESS_KEY=local
S3_SECRET_KEY=local-secret

# Azure Blob Storage (alternative)
AZURE_STORAGE_CONNECTION_STRING=
AZURE_CONTAINER_NAME=snapshots

# WebRTC TURN (optional)
TURN_URL=
TURN_USERNAME=
TURN_CREDENTIAL=

# Application Settings
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_ENCRYPTION_KEY=your-encryption-key

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=60000

# Monitoring
MAX_SNAPSHOT_SIZE_MB=5
SNAPSHOT_RETENTION_DAYS=90
